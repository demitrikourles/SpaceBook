@model SpaceBook.ViewModels.FacilityPhotoViewModel

@{
    ViewBag.Title = "Upload Facility Photo";
}

<h1 style="margin: 2% 0% 2% 0%" align="center">Facility Successfully Registered</h1>

<div class="row justify-content-center" style="margin: 2% 0% 2% 0%">
    <div class="col-8">
        <div class="progress" style="height: 25px;">
            <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0"
                 aria-valuemin="0" aria-valuemax="100" style="width:100%">
                Upload a facility photo (Optional)
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("UploadFacilityPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-center">
        <div class="col-6">
            <p style="margin: 0% 0% 5% 0%" align="center">Your facility's default photo is shown below. To change this photo please upload a photo...</p>
            <hr />
            <div style="text-align: center">
                <img class="card-img-top" src="@Url.Content("~/Content/FacilityPhotos/defaultFacilityPhoto.jpg")" alt="Card image cap" style="width:50% ; height:50%" />
                <br />
                <h4 style="margin-top: 4%">Default facility photo</h4>
            </div>
            <br />
            <hr />
            <div class="form-group" style="text-align: center">
                <h4>Upload your own facility photo</h4>
                <input type="file" name="FacilityPhotoFile" class="btn btn-default" />
            </div>
            @Html.HiddenFor(x => x.FacilityId)
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Finish" class="btn btn-primary" style="margin-left: 5%" />
            </div>

        </div>
    </div>
}


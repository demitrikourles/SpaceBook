@model IEnumerable<SpaceBook.Models.TagType>
@{
    ViewBag.Title = "Home Page";
}

<div class="backImage">

    <br />
    <div class="jumbotron bg-dark">
        <h1>SpaceBook</h1>
        <p class="lead">SpaceBook is Regina's application for booking and advertising local athletic facilities.</p>
    </div>

    <div id="wrapper">
        <div class="form-group col-5" id="left">
            @using (Html.BeginForm("SearchResultsName", "Home", FormMethod.Post)) {
                <h2 style="margin-left:10%">Search facilities by name</h2>
                <input class="form-control" name="nameInput" type="text" placeholder="Enter Name..." style="margin-top:3%" />
                <br />
                <br />
                <input type="submit" value="Search By Name" class="btn btn-primary btn-lg col-6" style="margin-left:23%"/>
            }
        </div>

        <div class="form-group col-5" id="right" style="margin-left:10%">
            @using (Html.BeginForm("SearchResultsTags", "Home", FormMethod.Post)) {
                <h2 style="margin-left:10%">Search facilities by tag</h2>
                <select class="form-control" name="tagInput" style="margin-top:3%" id="exampleFormControlSelect1">
                    <option value="" selected disabled>Please select</option>
                    @foreach (var item in Model) {
                        <option>@item.Name</option>
                    }
                </select>
                <br />
                <br />
                <input type="submit" value="Search By Tags" class="btn btn-primary btn-lg col-6" style="margin-left:23%"/>
            }
        </div>
    </div>
</div>


<style>
    #wrapper {
        display: flex;
    }

    #left {
        flex: 0 0 65%;
    }

    #right {
        flex: 1;
    }

    body {
        background-image: url("../../Content/Images/Skyline.jpg");
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .jumbotron {
        color: white;
        background-image: url("../../Content/Images/logo.png");
        background-repeat: no-repeat;
        background-position: right;
    }
</style>

@model SpaceBook.Models.Facility
@{
    ViewBag.Title = "ViewFacility";
}
<br />

<div class="col-md-3">
    <h2>View Facility</h2>
</div>
<div class="row">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <hr />
                <p class="card-text">Rate - $@Model.HourlyRate</p>
                <hr />
                <p><span class="fa fa-clock-o fa-fw"></span>Open Time - @Model.StartTime</p>
                <p><span class="fa fa-clock-o fa-fw"></span>Close Time - @Model.EndTime</p>
                <p><span class="fa fa-map-marker fa-fw"></span>@Model.Address</p>
                <p><span class="fa fa-phone fa-fw"></span>@Model.Phone</p>
                <p><span class="fa fa-envelope fa-fw"></span>@Model.Email</p>
                <hr />
                <button type="button" onclick="location.href='@Url.Action("ViewFacilityAvailability", new { facilityId = Model.Id, weekIncr = 0 })'" class="btn btn-primary"><span class="fa fa-calendar fa-fw"></span> View Availability</button>
            </div>
            <div class="card-footer">
                <small class="text-muted">**Last booked date text**</small>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <img class="card-img-top" src="\Content\Images\MosaicStadium.jpg" alt="Card image cap" height="300" width="42">
    </div>
</div>



